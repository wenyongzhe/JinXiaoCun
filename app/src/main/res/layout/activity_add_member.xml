<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height_35"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittext_border_bg2"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/et_search"
                    style="@style/EditText_Grey"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@null"
                    android:hint="会员卡号/手机号/姓名"
                    android:imeOptions="actionSearch"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_close"
                    />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/icon_search"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height_35"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border_bg"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="卡号:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_card_number"
                style="@style/EditText_Grey_Border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:enabled="false"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height_35"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border_bg"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="姓名:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_name"
                style="@style/EditText_Grey_Border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height_35"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border_bg"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="手机:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone_number"
                style="@style/EditText_Grey_Border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="phone"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height_35"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border_bg"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="会员卡类型:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_card_type"
                style="@style/EditText_Grey_Border"
                android:layout_width="0dp"
                android:enabled="false"
                android:background="@null"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height_35"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border_bg"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="性别:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_sex"
                style="@style/EditText_Grey_Border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_weight="1"
                android:gravity="center_vertical" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="格式为xxxx-xx-xx(范围1900-01-01~2299-01-01)"
            android:textSize="10sp"
            android:textColor="@color/red"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height_35"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border_bg"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="生日:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_birthday"
                style="@style/EditText_Grey_Border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="date"
                android:background="@null"
                android:gravity="center_vertical" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height_35"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border_bg"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="备注:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_remarks"
                style="@style/EditText_Grey_Border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_weight="1"
                android:gravity="center_vertical" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_save_member_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_heigth50"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:background="@drawable/bg_button"
            android:textSize="@dimen/txt_size16" />
    </LinearLayout>
</ScrollView>
