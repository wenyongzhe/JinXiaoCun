<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height_40"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="盘点批号" />

        <com.eshop.jinxiaocun.widget.DrawableTextView
            android:id="@+id/tvPandianpihao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            style="@style/TextView_Select" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height_40"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="门店号" />

        <TextView
            android:id="@+id/tv_pd_storeNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            style="@style/TextView_Grey" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height_40"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="盘点范围" />

        <TextView
            android:id="@+id/tv_pd_fanwei"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            style="@style/TextView_Grey" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height_40"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="盘点类别" />

        <TextView
            android:id="@+id/tv_pd_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            style="@style/TextView_Grey" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height_40"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="操作员ID" />

        <TextView
            android:id="@+id/tv_pd_operId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            style="@style/TextView_Grey" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height_40"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="操作日期" />

        <TextView
            android:id="@+id/tv_pd_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            style="@style/TextView_Grey" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height_40"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_Black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="备注" />

        <EditText
            android:id="@+id/et_pd_bz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            style="@style/EditText_Grey_Border" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_pd_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_heigth50"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="下一步"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/txt_size16"
        />


</LinearLayout>
