<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/txt_size16"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="条码" />

        <EditText
            android:id="@+id/et_barcode"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:imeOptions="actionSend"
            style="@style/EditText_Grey_Border"
            android:gravity="left|center_vertical"
            android:hint="请扫描精准条码/输入精准条码"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ListView_Header"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="单号:"
            />

        <TextView
            android:id="@+id/tv_pd_orderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            style="@style/AutoScrollTextView"
            android:layout_marginRight="5dp"
            android:gravity="center|left"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ListView_Header"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="操作员:"
            />

        <TextView
            android:id="@+id/tv_pd_operId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="@style/TextView_Grey"
            android:gravity="center|left"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ListView_Header"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="批号:"
            />

        <TextView
            android:id="@+id/tv_pd_pihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            style="@style/AutoScrollTextView"
            android:layout_marginRight="5dp"
            android:gravity="center|left"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ListView_Header"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="范围:"
            />

        <TextView
            android:id="@+id/tv_pd_fanwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="@style/TextView_Grey"
            android:gravity="center|left"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ListView_Header"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="仓库:"
            />

        <TextView
            android:id="@+id/tv_pd_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            style="@style/TextView_Grey"
            android:layout_marginRight="5dp"
            android:gravity="center|left"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ListView_Header"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="备注:"
            />

        <EditText
            android:id="@+id/et_pd_bz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="@style/EditText_Black"
            android:maxWidth="80dp"
            android:gravity="center|left"
            android:textColor="@color/text_grey1"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/iv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:paddingRight="30dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_down"
            />

        <TextView
            android:id="@+id/tv_pd_nopandian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ListView_Header"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="未盘商品"
            android:padding="5dp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/border_bg_primary"
            />
    </RelativeLayout>



</LinearLayout>
