    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextView_Black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:text="服务器：" />

        <EditText
            android:id="@+id/et_service_url"
            style="@style/EditText_Grey_Border"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:gravity="top"
            android:singleLine="false"
            android:layout_width="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextView_Black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:text="端口号：" />

        <EditText
            android:id="@+id/et_service_port"
            style="@style/EditText_Grey_Border"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:gravity="top"
            android:singleLine="false"
            android:inputType="number"
            android:layout_width="match_parent" />

    </LinearLayout>


    <RadioGroup
        android:visibility="invisible"
        android:id="@+id/rg_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="手机" />

        <RadioButton
            android:id="@+id/rb_summi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:text="summi机器" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="120dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_test"
            style="@style/Button_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/btnSave" />
        <Button
            android:visibility="gone"
            android:id="@+id/btn_blue"
            style="@style/Button_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="蓝牙设置" />
    </LinearLayout>

</LinearLayout>
