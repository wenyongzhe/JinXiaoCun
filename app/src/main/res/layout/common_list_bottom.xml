<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lin_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_item_height_30"
                    android:background="@color/alpha_blue"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal" >

                    <View
                        android:id="@+id/view_0"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />

                    <TextView
                        android:id="@+id/tv_0"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/ListView_Header" />

                    <View
                        android:id="@+id/view_1"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />

                    <TextView
                        android:id="@+id/tv_1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/ListView_Header" />

                    <View
                        android:id="@+id/view_2"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />

                    <TextView
                        android:id="@+id/tv_2"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/ListView_Header" />

                    <View
                        android:id="@+id/view_3"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />

                    <TextView
                        android:id="@+id/tv_3"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/ListView_Header" />

                    <View
                        android:id="@+id/view_4"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />

                    <TextView
                        android:id="@+id/tv_4"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/ListView_Header" />

                    <View
                        android:id="@+id/view_5"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />

                    <TextView
                        android:id="@+id/tv_5"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/ListView_Header" />

                    <View
                        android:id="@+id/view_6"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />

                    <TextView
                        android:id="@+id/tv_6"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/ListView_Header" />

                    <View
                        android:id="@+id/view_7"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />


                    <TextView
                        android:id="@+id/tv_7"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/ListView_Header" />

                    <View
                        android:id="@+id/view_8"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />

                    <TextView
                        android:id="@+id/tv_8"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/ListView_Header" />

                    <View
                        android:id="@+id/view_9"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />

                    <TextView
                        android:id="@+id/tv_9"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        style="@style/ListView_Header" />

                    <View
                        android:id="@+id/view_10"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_blue" />

                </LinearLayout>

                <ListView
                    android:id="@+id/listview_data"
                    android:layout_width="match_parent"
                    android:divider="@color/divider"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:dividerHeight="1dip"
                    android:listSelector="#00000000"
                    android:layout_height="match_parent"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/divider" />

            </LinearLayout>

        </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/activity_list_bottom"
        android:background="@color/button_background"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bottom_btn_create"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/Button_blue"
            android:layout_weight="1"
            android:text="@string/billing" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <Button
            android:id="@+id/bottom_btn_modify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/Button_blue"
            android:layout_weight="1"
            android:text="@string/modify" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <Button
            android:id="@+id/top_btn_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/Button_blue"
            android:layout_weight="1"
            android:text="@string/delete" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <Button
            android:id="@+id/top_btn_upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/Button_blue"
            android:layout_weight="1"
            android:text="@string/upload" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

    </LinearLayout>

</LinearLayout>
