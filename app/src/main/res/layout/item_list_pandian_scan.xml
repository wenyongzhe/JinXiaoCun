<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_height_40"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_product_name"
                style="@style/AutoScrollTextView"
                android:layout_width="150dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_product_code"
                style="@style/TextView_Grey"
                android:layout_width="150dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_spec"
                style="@style/TextView_Grey"
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1" />


            <TextView
                android:id="@+id/tv_price"
                style="@style/TextView_Grey"
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_xsprice"
                style="@style/TextView_Grey"
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_unit"
                style="@style/TextView_Grey"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_store_name"
                style="@style/TextView_Grey"
                android:layout_width="150dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_store_num"
                style="@style/TextView_Grey"
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_pd_number"
                style="@style/TextView_Grey"
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_diff_number"
                style="@style/TextView_Grey"
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1" />



        </LinearLayout>
    </LinearLayout>


</LinearLayout>