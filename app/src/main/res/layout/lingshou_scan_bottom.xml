<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

        <ListView
            android:id="@+id/listview_data"
            android:layout_marginBottom="@dimen/layout_item_height_85"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:listSelector="#00000000"
            android:divider="@null"
            android:layout_height="fill_parent"
            />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/li"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <FrameLayout
                android:layout_marginRight="@dimen/layout_margin10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:src="@drawable/shopping_cart"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/layout_margin15"
                    android:layout_gravity="center_horizontal|top"
                    android:textColor="@color/gray"
                    android:textSize="15dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_check_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="left|center_vertical"
                android:textColor="@color/gray"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/tv_moling_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="left|center_vertical"
                android:textColor="@color/gray"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/tv_youhui_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="left|center_vertical"
                android:textColor="@color/gray"
                android:textSize="13dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_order_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="left|center_vertical"
                android:textColor="@color/gray"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_buttom1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/button_background"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_yijia"
                style="@style/Button_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/modifyprice"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"/>

            <Button
                android:id="@+id/btn_zhekou"
                style="@style/Button_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/zhekou_danbi"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"/>

            <Button
                android:id="@+id/btn_vip"
                style="@style/Button_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/fukuan_vip"
                android:textSize="@dimen/text_14"
                android:visibility="gone"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_yingyeyuan"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />

            <Button
                android:id="@+id/btn_add"
                style="@style/Button_blue"
                android:layout_alignParentEnd="true"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/add"/>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
