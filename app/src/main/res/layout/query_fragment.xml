<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_item_heigth">

        <EditText
            android:id="@+id/et_query"
            android:hint="@string/list_item_Searchstr"
            android:layout_margin="10dp"
            style="@style/EditText_Grey_Border"
            android:layout_width="320dp"
            android:layout_marginLeft="20dp"
            android:layout_height="@dimen/layout_margin35"/>
        <ImageButton
            android:id="@+id/ib_seach"
            android:background="@drawable/seach"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.eshop.jinxiaocun.widget.RefreshListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-1px"
        android:cacheColorHint="@color/transparent"
        android:divider="@drawable/bg_gray_horizonter_divider_line"
        android:dividerHeight="1px"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="@color/transparent">
    </com.eshop.jinxiaocun.widget.RefreshListView>

</LinearLayout>