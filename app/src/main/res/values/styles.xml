<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView_Grey"  >
        <item name="android:textColor">@color/text_grey1</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>


    // values-v19。v19 开始有 android:windowTranslucentStatus 这个属性
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="text_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="text_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 加载滚动条样式 -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="TextView_Unline_Grey">
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:typeface">serif</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView_Unline_Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Button_dark">
        <item name="android:background">@color/button_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="EditText_Blue">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/button_background</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="EditText_White">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TextView_Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="EditText_Grey_Border">
        <item name="android:background">@drawable/edittext_border_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_grey1</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:textColorHint">@color/text_grey2</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="ListView_Header">
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button_blue">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TextView_Select">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/textview_bg</item>
        <item name="android:drawableRight">@mipmap/select</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AutoScrollTextView">
        <item name="android:textColor">@color/text_grey1</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EditText_Grey">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_noborder_bg</item>
        <item name="android:textColor">@color/text_grey1</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColorHint">@color/text_grey2</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!--  边框 -->
        <item name="android:windowIsFloating">true</item>
        <!--  是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--  半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!--  无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--  背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="EditText_Black">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="cusdom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@mipmap/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="cusdom_dialog_whitebg" parent="@style/cusdom_dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TextView_DateTime">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/textview_bg</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@mipmap/date</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView_DateTime_Unline">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/txt_size16</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:drawableRight">@mipmap/date</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
